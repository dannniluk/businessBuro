:root {
  color-scheme: only light;
  --bg: #f4efe7;
  --ink: #1f1713;
  --muted: #5c514a;
  --accent: #6f1d1b;
  --accent-2: #3a2b23;
  --paper: #faf7f2;
  --glass: rgba(250, 247, 242, 0.78);
  --stroke: rgba(31, 23, 19, 0.12);
  --shadow: 0 28px 60px rgba(31, 23, 19, 0.16);
  --radius: 20px;
  --max: 1140px;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: "Manrope", system-ui, -apple-system, sans-serif;
  background: var(--bg);
  color: var(--ink);
  line-height: 1.7;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

h1,
h2,
h3 {
  font-family: "Bodoni Moda", serif;
  font-weight: 600;
  letter-spacing: 0.9px;
}

h1 {
  font-size: clamp(3.1rem, 5vw, 4.6rem);
  line-height: 1.05;
}

h1 .title-tight {
  display: inline-block;
  letter-spacing: -0.02em;
}

h1 .title-by {
  display: inline-block;
  font-style: italic;
  font-size: 0.45em;
  letter-spacing: 0.25em;
  margin: 0 0.25em;
  position: relative;
  top: -0.3em;
  color: var(--accent-2);
}

h1 .title-name {
  display: inline-block;
  letter-spacing: 0.08em;
}

h2 {
  font-size: clamp(2rem, 3vw, 2.8rem);
  line-height: 1.15;
}

h3 {
  font-size: 1.4rem;
}

p {
  color: var(--muted);
}

a {
  color: inherit;
  text-decoration: none;
}

ul {
  list-style: none;
}

.container {
  width: min(100% - 2.5rem, var(--max));
  margin: 0 auto;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 2rem 0 1rem;
}

.brand {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.brand__mark {
  width: 52px;
  height: 52px;
  border-radius: 16px;
  background: linear-gradient(135deg, #7a2a27, #4c2b22);
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
}

.brand__name {
  font-family: "Bodoni Moda", serif;
  font-weight: 500;
  color: var(--ink);
}

.brand__eyebrow {
  font-size: 0.75rem;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--muted);
}

.eyebrow {
  font-size: 0.75rem;
  letter-spacing: 0.3em;
  text-transform: uppercase;
  color: var(--accent-2);
  margin-bottom: 0.75rem;
}

.subtitle {
  font-size: 1.05rem;
  max-width: 560px;
  margin-top: 1rem;
}

.hero {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 4rem;
  padding: 3rem 0 4rem;
  align-items: center;
}

.hero__content {
  max-width: 520px;
}

.hero__subtitle {
  font-size: 0.95rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
}

.hero__actions {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 2rem;
}

.hero__meta {
  margin-top: 2rem;
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  color: var(--muted);
  font-size: 0.85rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
}

.hero__visual {
  position: relative;
  min-height: 420px;
  display: grid;
  align-items: center;
  z-index: 1;
}

.hero__frame {
  width: 100%;
  height: 100%;
  min-height: 420px;
  border-radius: calc(var(--radius) + 4px);
  background: linear-gradient(135deg, #4b241f 0%, #7a2d28 48%, #3f1f1a 100%);
  box-shadow: 0 30px 60px rgba(31, 23, 19, 0.25);
  position: relative;
  overflow: hidden;
}

.hero__frame::after {
  content: "";
  position: absolute;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='2' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='200' height='200' filter='url(%23n)' opacity='0.35'/%3E%3C/svg%3E");
  opacity: 0.25;
  mix-blend-mode: soft-light;
}

.hero__overlay {
  position: absolute;
  right: -8%;
  bottom: -12%;
  width: min(90%, 380px);
  padding: 2.2rem;
  box-shadow: 0 20px 30px rgba(31, 23, 19, 0.12);
  border: 1px solid rgba(31, 23, 19, 0.12);
  z-index: 2;
}

.hero__index {
  position: absolute;
  top: -18%;
  left: -4%;
  font-size: clamp(5rem, 12vw, 9rem);
  letter-spacing: 0.12em;
  color: rgba(31, 23, 19, 0.14);
  z-index: 0;
  pointer-events: none;
}

.card__label {
  font-family: "Bodoni Moda", serif;
  font-size: 1.3rem;
  color: var(--ink);
  margin-bottom: 1rem;
}

.checklist {
  display: grid;
  gap: 1rem;
  margin-bottom: 2rem;
}

.checklist li::before {
  content: "â—†";
  color: var(--accent);
  margin-right: 0.6rem;
  font-size: 0.65rem;
}

.checklist li {
  display: flex;
  gap: 0.6rem;
  align-items: flex-start;
}

.section {
  padding: 4rem 0;
}

.section__head {
  display: grid;
  gap: 1rem;
  margin-bottom: 2.5rem;
}

.grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.tile,
.event,
.profile,
.frame {
  background: var(--paper);
  border-radius: var(--radius);
  padding: 2rem;
  border: 1px solid var(--stroke);
  box-shadow: 0 18px 40px rgba(32, 26, 20, 0.08);
}

.tile p {
  margin-top: 0.75rem;
}

.split {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  align-items: center;
}

.quote {
  padding: 2.5rem;
  font-size: 1.05rem;
}

.quote__author {
  margin-top: 1.5rem;
  font-size: 0.9rem;
  color: var(--accent-2);
}

.badge-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-top: 1.5rem;
}

.badge {
  border: 1px solid var(--stroke);
  padding: 0.4rem 0.9rem;
  border-radius: 999px;
  font-size: 0.85rem;
  background: var(--paper);
}

.glass {
  background: var(--glass);
  backdrop-filter: blur(18px);
  border: 1px solid rgba(255, 255, 255, 0.6);
  box-shadow: var(--shadow);
}

.grid--events .event {
  display: grid;
  gap: 1rem;
}

.event__date {
  font-size: 0.8rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: var(--accent-2);
}

.grid--experts .profile {
  display: grid;
  gap: 1rem;
  grid-template-columns: 56px 1fr;
  align-items: start;
}

.avatar {
  width: 56px;
  height: 56px;
  border-radius: 18px;
  background: linear-gradient(135deg, #7a2a27, #4c2b22);
}

.grid--gallery {
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}

.frame {
  min-height: 170px;
  background: linear-gradient(135deg, #f3ebe4, #fbf7f2);
}

.quote-list {
  margin-top: 2rem;
  display: grid;
  gap: 1rem;
  color: var(--muted);
}

.join {
  background: var(--paper);
  border-radius: calc(var(--radius) + 4px);
  padding: 3rem 3rem 3.5rem;
  box-shadow: 0 25px 60px rgba(32, 26, 20, 0.08);
}

.join__actions {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 1.5rem;
  margin-top: 2rem;
}

.join__note {
  font-size: 0.95rem;
  color: var(--muted);
}

.button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 999px;
  padding: 0.7rem 1.5rem;
  background: var(--accent-2);
  color: rgba(250, 247, 242, 0.9);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.18em;
  font-size: 0.75rem;
  border: none;
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.button:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(58, 43, 35, 0.3);
}

.button--ghost {
  background: transparent;
  border: 1.5px solid var(--stroke);
  color: var(--ink);
}

.button--light {
  background: var(--paper);
  color: var(--ink);
  border: 1px solid var(--stroke);
}

.footer {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 1.5rem;
  padding: 3rem 0 4rem;
}

.footer__note {
  color: var(--muted);
  margin-top: 0.4rem;
}

.footer__actions {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.noise,
.glow {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: -2;
}

.noise {
  opacity: 0.25;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='2' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='200' height='200' filter='url(%23n)' opacity='0.4'/%3E%3C/svg%3E");
}

.glow {
  background: radial-gradient(circle at 20% 10%, rgba(111, 29, 27, 0.16), transparent 60%),
    radial-gradient(circle at 80% 20%, rgba(58, 43, 35, 0.14), transparent 55%),
    radial-gradient(circle at 50% 80%, rgba(251, 247, 242, 0.9), transparent 60%);
  z-index: -3;
}

.reveal {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}

.reveal.is-visible {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 768px) {
  .header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .hero__overlay {
    position: relative;
    right: 0;
    bottom: 0;
    width: 100%;
    margin-top: -3rem;
  }

  .join {
    padding: 2.5rem 2rem;
  }
}
